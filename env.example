# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
DJANGO_ENV=production
BUILD_TARGET=production

# Database Settings
DB_NAME=politico_db
DB_USER=politico_user
DB_PASSWORD=your-secure-password
DB_HOST=db
DB_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Frontend Settings
# For production: Leave empty or set to empty string to use relative URLs (nginx proxies /api/ to backend)
# For development: Set to http://localhost:8000
REACT_APP_API_URL=

# Email Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Docker Commands (can be overridden)
BACKEND_COMMAND=gunicorn --bind 0.0.0.0:8000 --workers 4 --timeout 120 politico.wsgi:application
FRONTEND_COMMAND=npm start 